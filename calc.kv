            font_size: '45sp'
            md_bg_color: 119 / 255, 136 / 255, 153 / 255, 1
            size_hint: 1, 1
            on_release:
                root.numeration('6')
        MDRaisedButton:
            text: ' / '
            id: button_div
            font_size: '45sp'
            md_bg_color: 255 / 255, 215 / 255, 0 / 255, 1
            size_hint: 1, 1
            on_release:
                root.operation('/')

    BoxLayout:
        size_hint: 0.9, 0.15
        padding: [0, 0, 0, 0]
        cols: 4

        MDRaisedButton:
            text: ' 1 '
